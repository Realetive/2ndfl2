mixin menu(data, ...other)
  .menu(class=data ? 'menu_' + data : '')
    each item in menu[data] ? menu[data] : menu.default
      - var mod = item.alias == other ? 'menu__item_active' : null
      - var link = item.alias ? item.alias + '.html' : null
      if data == 'part'
        a.menu__item(
          href=link
          class=mod)
          if item.part
            h2.text.text_lead #{item.part}
          if item.desc
            ul.list
              each itemDesc in item.desc
                li.list__item #{itemDesc}
      else
        a.menu__item(
          title=item.title ? item.title : null
          href=item.alias)
          | #{item.item}